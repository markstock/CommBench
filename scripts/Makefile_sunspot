# ----- Make Macros -----

CXX = mpic++
CXXFLAGS = -cxx=icpx -fsycl -fsycl-targets=spir64

LD_FLAGS = -fopenmp -fsycl
CMPIFLAGS =
CMPILIBFLAGS = 

TARGETS = Alltoall
OBJECTS = main.o

# ----- Make Rules -----

all:	$(TARGETS)

%.o : %.cpp
	${CXX} ${CXXFLAGS} ${CMPIFLAGS} $< -c -o $@

Alltoall: $(OBJECTS)
	$(CXX) -o $@ $(OBJECTS) $(CMPILIBFLAGS) $(LD_FLAGS)

clean:
	rm -f $(TARGETS) *.o *.o.* *.txt *.bin core *.html *.xml
